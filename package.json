{
  "name": "nodejs-monorepo",
  "version": "1.0.0",
  "description": "NodeJS Monorepo",
  "repository": {
    "type": "git",
    "url": "git@github.com-maxondev-personal:maxonchickdev/nodejs-monorepo.git"
  },
  "keywords": [],
  "author": "maxondev",
  "license": "ISC",
  "workspaces": [
    "packages/shared",
    "apps/web",
    "apps/backend"
  ],
  "scripts": {
    "lint:format:check": "prettier . -c --config prettier.config.ts",
    "lint:format:fix": "prettier . -w --config prettier.config.ts",
    "lint:check": "eslint --max-warnings=0 -c eslint.config.ts",
    "lint:fix": "eslint --fix -c eslint.config.ts",
    "lint:filesystem": "ls-lint -config .ls-lint.yml",
    "lint:clean": "knip -c knip.config.ts",
    "hooks:init": "simple-git-hooks",
    "hooks:precommit": "lint-staged -c lint-staged.config.ts",
    "hooks:prepush": "npm run build -w apps/web && npm run build -w apps/backend"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@ls-lint/ls-lint": "^2.3.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
