{
    "compilerOptions": {
        "target": "es2020",
        "module": "node16",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true
    }
}
